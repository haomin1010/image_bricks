                "--server-task", "multipicture_assembling_from_begin",
                "--server-record", "true",
                "--server-video-length", "0",
                "--server-video-interval", "0",
                "--server-log", "outputs/compare/isaac_server_chain_test.log",
                "--seed", "0",
                "--goals", "2,2,0;2,3,0;3,3,0",
